{% extends "_layout.twig" %}

{% block title %}Equipment List | {{ siteName }}{% endblock %}

{% block content %}
<article>
    <section class="equipment-list-page">
        <div class="site-container">
            <div class="empty-state" style="display:none;">
                <div class="empty-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 64 64">
                        <path id="list-icon" d="M8,12V16H4V12ZM20,12V16H12V12ZM8,20V24H4V20ZM20,20V24H12V20ZM8,28V32H4V28ZM20,28V32H12V28Z" transform="translate(16 16)" fill="#9D9D9C"/>
                    </svg>
                </div>
                <h3>Your equipment list is currently empty</h3>
                <p>Browse our products and add items to your enquiry list to get started.</p>
                <a href="/" class="btn btn-primary">Browse Products</a>
            </div>
            <div class="equipment-list-container" style="display:none;">
                <div class="inner-container">
                    <div class="enquiry-items-section">
                        <div class="text-container">
                            <h4 class="heading">Multi-enquiry list</h4> 
                            <p class="subtext">Youâ€™ve selected the following equipment</p>  
                        </div>
                        <div id="list-contents"></div>
                        <div class="enquiry-actions">
                            <button id="clear-all-enquiries" class="remove-all-enquiries">
                                Remove All
                                <svg xmlns="http://www.w3.org/2000/svg" width="13.333" height="15" viewBox="0 0 13.333 15">
                                    <path id="delete_FILL0_wght400_GRAD0_opsz24" d="M162.5-825a1.605,1.605,0,0,1-1.177-.49,1.605,1.605,0,0,1-.49-1.177V-837.5H160v-1.667h4.167V-840h5v.833h4.167v1.667H172.5v10.833a1.605,1.605,0,0,1-.49,1.177,1.605,1.605,0,0,1-1.177.49Zm8.333-12.5H162.5v10.833h8.333Zm-6.667,9.167h1.667v-7.5h-1.667Zm3.333,0h1.667v-7.5H167.5Zm-5-9.167v0Z" transform="translate(-160 840)" fill="#041c2a"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                    <div class="enquiry-form-section">
                        <div class="form-container">
                            {{ freeform.form("MultiEnquiryForm", {
                                formattingTemplate: "grid/index.twig"
                            }).render() }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</article>


{% endblock %} 