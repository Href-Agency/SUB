{% set className = "heroWithBreadcrumbs" %}
{% set blockId = "heroWithBreadcrumbs" %}

{% set backgroundImage = singleBlock.backgroundImage.one() %}
{% set subtext = singleBlock.subtext %}



<section id="{{ blockId }}" class="{{ className }}">
    <div class="background-container">
        {% include '_partials/components/_imageVideo.twig' with {
            media: backgroundImage
        } %}
    </div>
    <div class="site-container">
        {% include "_partials/components/_breadcrumbs.twig" %}
        <div class="subtext lg">
            <p>{{ subtext }}</p>
        </div>
    </div>
</section>